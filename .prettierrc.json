{
  "$schema": "https://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": ["*.php", "artisan"],
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "phpVersion": "8.2",
  "plugins": ["@prettier/plugin-php", "prettier-plugin-tailwindcss"],
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "trailingCommaPHP": false,
  "vueIndentScriptAndStyle": true
}
